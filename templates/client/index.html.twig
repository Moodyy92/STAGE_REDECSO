{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('client') }}
{% endblock %}

{% block body %}
    <h1>Client index</h1>

    <table id="dataTable" class="table table-bordered table-stripped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Entreprise</th>
                <th>Civilite</th>
                <th>Adresse</th>
                <th>Cplt_adresse</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>CodePostal</th>
                <th>Ville</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.Nom }}</td>
                <td>{{ client.prenom }}</td>
                <td>{{ client.entreprise ? 'Yes' : 'No' }}</td>
                <td>{{ client.civilite }}</td>
                <td>{{ client.adresse }}</td>
                <td>{{ client.cpltAdresse }}</td>
                <td>{{ client.telephone }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.codePostal }}</td>
                <td>{{ client.ville }}</td>
                <td>
                    <a href="{{ path('client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}">Create new</a>
{% endblock %}

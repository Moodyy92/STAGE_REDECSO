{% extends 'base.html.twig' %}

{% block title %}New Devis{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('devis_client') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('devis_client') }}
{% endblock %}

{% block body %}

{#    {{ include('./devis/partials/navtools.html.twig') }}#}
<div class=" d-flex pt-5" id="js-devis-head">
    <img src="{{ asset('build/images/'~redecso.logo) }}">
</div>

<div id="scss-info-client">
    <div id="js-client_div" class="d-flex justify-content-end w-100"></div>
    <div id="js-adresse_div" class="d-flex justify-content-end w-100"></div>
    <div id="js-cp_ville_div" class="d-flex justify-content-end w-100"></div>
</div>
<div>
    <div id="js-objet_div" class="d-flex justify-content-start w-100 "></div>
    <div id="js-reference_div" class="d-flex justify-content-start w-100"></div>
</div>


<div class="d-flex justify-content-center" >
    <div id="vue-devis">

        <container id="vue-tableau-devis" class="d-flex row">

            <div class="d-flex justify-content-center">
                {{ include('devis/_form.html.twig') }}
            </div>

            <table id="js-tableau" style="display: none;" class="table text-black table-bordered mt-5">
                <thead>
                <tr>
                    <th scope="col">Categorie</th>
                    <th scope="col">Description</th>
                    <th scope="col">Produit

                        <button class="add_produit" type="button" data-target="{{ path('produit_new') }}" class="rounded-circle mx-1 ">
                            <i class="fas fa-plus"></i>
                        </button>

                    </th>
                    <th scope="col">Quantité</th>
                    <th scope="col">Prix</th>
                </tr>
                </thead>
                <tbody>
                {% block tbody %}{% endblock %}
                </tbody>
                <tfoot>
                <tr>
                    <th colspan="3" id="css-colone-footer" ></th>
                    <th id="css-colone-footer" >TOTAL HT :</th>
                    <th id="js-prix-total" ></th>
                </tr>
                <tr>
                    <th colspan="3" id="css-colone-footer" ></th>
                    <th id="css-colone-footer" >BASE TVA 20% :</th>
                    <th id="" ></th>
                </tr>
                <tr>
                    <th colspan="3" id="css-colone-footer" ></th>
                    <th id="css-colone-footer" >MONTANT TOTAL TTC :</th>
                    <th id="" ></th>
                </tr>
                </tfoot>
            </table>

            <div class="d-flex justify-content-center">
                {{ include('produit/partials/_form_devis.html.twig') }}
            </div>

            <div id="js-form-etape-2" style="display: none; background-color: white">
                <div class="d-flex justify-content-center row mt-1" >
                    <div class="d-flex row">
                        <h3  class="d-flex justify-content-center mx-2">Choisissez l'action que vous souhaitez créer :</h3>
                        <div class="d-flex justify-content-center">
                            <button id="js-btn-show-Categorie" class="btn btn-outline-primary mx-2">Une catégorie</button>
                            <button id="js-btn-show-tache" class="btn btn-outline-primary mx-2">Une Tache</button>
                        </div>
                    </div>
                </div>
            </div>

            <footer id="js-footer" class=" d-flex flex-column w-100 text-center pt-5 "style="background-color: white">
                <div class="d-flex justify-content-center w-100 pt-4 mt-5">
                    RIB : <br>
                    Code Banque : {{  redecso.codeBanque }} Code Guichet : {{ redecso.codeGuichet}} Code BIC : {{ redecso.codeBIC }} <br>
                    Numéro de compte : {{ redecso.numCompte}} Clé : {{ redecso.cleCompte }}<br>
                    Domiciliation : {{ redecso.domiciliationCompte }}<br>
                    Numéro de Compte IBAN : {{ redecso.IBAN }}
                    <br>
                    <br>
                    {{ redecso.nom }} {{ redecso.adresse}} {{ redecso.cp}} {{ redecso.ville }}. SARL au Capital de {{ redecso.capital }}€. <br>
                    N° Siret : {{ redecso.siret }} - Code APE : {{ redecso.codeAPE}} - N° TVA intracommunautaire : {{ redecso.numTVAIntracommunautaire }}<br>
                    Direction Commercial: Vandeputte Hervé 06.09.22.22.26 / Direction Technique: Haddadi Tahar 06.28.23.92.77 <br>
                    Adresse Mail : {{ redecso.email }}
                </div>
            </footer>

        </container>



        <div class="d-flex justify-content-center pt-3">
            <button id="js-btn-add-html" class="add_produit btn btn-sm btn-outline-info justify-content-center" data-target="{{ path('produit_new') }}">
                <i class="fas fa-plus-circle"></i>
            </button>
        </div>

    </div>



    <div class="modal fade" id="modale" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>




{% endblock %}
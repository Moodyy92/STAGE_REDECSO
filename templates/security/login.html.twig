{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div id="redecso" class="d-flex h-25 align-items-center justify-content-center">
        <div class="">
            <h1 class="fw-bold text-black-50">REDECSO</h1>
        </div>

    </div>

    <div class="d-flex h-50 align-items-center justify-content-center text-white">

        <form method="post">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="d-flex align-items-center justify-content-center h3 mb-3 font-weight-normal">Connectez-vous :</h1>
            <label class="d-flex align-items-center justify-content-center " for="inputEmail">Email :</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label class="d-flex mt-2 align-items-center justify-content-center" for="inputPassword">Mot de passe :</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>


            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <div class="d-flex align-items-center justify-content-center" >
                <button class="btn mt-3  btn-outline-primary" type="submit">
                    Connection
                </button>
            </div>
        </form>
    </div>
{% endblock %}
